{
  "name": "emit-astro",
  "displayName": "EmiT-Astro",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "sync": "astro sync",
    "check": "astro check",
    "astro": "astro",
    "astro:up": "npx @astrojs/upgrade",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "fontmin": "node ./scripts/fontmin",
    "jampack": "jampack ./dist",
    "cz": "cz",
    "postinstall": "simple-git-hooks",
    "postbuild": "node ./scripts/fontmin && jampack ./dist && node ./scripts/postbuild"
  },
  "dependencies": {
    "astro": "4.16.18"
  },
  "devDependencies": {
    "@antfu/eslint-config": "3.16.0",
    "@astrojs/check": "0.9.4",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@divriots/jampack": "0.33.1",
    "@types/html-minifier": "4.0.5",
    "@types/node": "22.15.24",
    "@unocss/eslint-plugin": "0.65.4",
    "commitizen": "4.3.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.27.0",
    "eslint-plugin-astro": "1.3.1",
    "eslint-plugin-format": "0.1.3",
    "fontmin": "1.1.0",
    "html-minifier": "4.0.0",
    "lightningcss": "1.30.1",
    "lint-staged": "15.5.2",
    "simple-git-hooks": "2.13.0",
    "terser": "5.40.0",
    "typescript": "5.8.3",
    "unocss": "0.65.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint -e $1"
  },
  "lint-staged": {
    "*.{js,ts,astro,json}": [
      "eslint --fix"
    ]
  },
  "jampack": {}
}
